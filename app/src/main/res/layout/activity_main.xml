<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sportMapView="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="alpha"
        android:background="@drawable/ani_click_selector"
        android:id="@+id/alpha" />

    <Button
        android:id="@+id/scale"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="scale"
        android:background="@drawable/ani_click_selector"
        android:layout_below="@+id/alpha"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="translate"
        android:background="@drawable/ani_click_selector"
        android:layout_below="@+id/scale"
        android:layout_alignParentEnd="true"
        android:id="@+id/translate" />

    <Button
        android:id="@+id/rotate"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="rotate"
        android:background="@drawable/ani_click_selector"
        android:layout_below="@+id/translate"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/evaluator"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="custom_evaluator"
        android:background="@drawable/ani_click_selector"
        android:layout_below="@+id/rotate"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frame Animation"
        android:background="@drawable/ani_click_selector"
        android:id="@+id/frame"
        android:layout_below="@+id/evaluator"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transition"
        android:background="@drawable/ani_click_selector"
        android:id="@+id/transition"
        android:layout_below="@+id/evaluator"
        android:layout_alignEnd="@+id/evaluator" />


</RelativeLayout>
